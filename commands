####### FROM LOCAL #######
- test the application
    mvn test -B -Dspring.profiles.active=${SPRING_PROFILES_ACTIVE}
- package the application
    mvn clean package -B -pl greeting -am -DskipTests
- run the application
    java -jar -Dspring.profiles.active=$SPRING_ACTIVE_PROFILE greeting\target\greeting-0.0.1-SNAPSHOT.jar
- build docker image
    docker build -t greeting -f greeting\Dockerfile || greeting/Dockerfile .
- run docker image
    docker run --rm --name greeting-service -p 8080:8080 -e SPRING_PROFILES_ACTIVE=${SPRING_PROFILES_ACTIVE} -it greeting
